    <link rel='stylesheet' id='bootstrap-css' href='~/3.3.7/bootstrap.min.css?ver=3.3.7' type='text/css' />

</head>

<body class="navbar-fixed sidebar-nav fixed-nav" style="font-family:Calibri;">

    <header class="navbar">
        <partial name="_navbar" />
    </header>

    <div class="sidebar">
        <partial name="_sidebar" />
    </div>

    <main class="main">

        <!-- Breadcrumb -->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@ViewBag.Dept</li>
            <li class="breadcrumb-item">
                <a href="#">@ViewBag.Page</a>
            </li>
            <!--<li class="breadcrumb-item active">داشبرد</li>

             Breadcrumb Menu
            <li class="breadcrumb-menu">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
