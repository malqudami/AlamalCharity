@model AlamalCharity.Models.FamilyModel;
@{
    Layout = null;
}

<div class="">
    <div class="card">
        <div class="card-header">
            <strong>إضافة عائلة</strong>
        </div>
        <div class="card-block">
            <form asp-controller="Clients" asp-action="UpdateFamily" method="post" class="form-horizontal ">
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="hf-email">رقم العائلة</label>
                    <div class="col-md-9">
                        <input type="text" name="fmID" class="form-control" style="font-family:Calibri;" value="@Model.fmID" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label">إسم العائلة</label>
                    <div class="col-md-9">
                        <input type="text" name="fmName" class="form-control" style="font-family:Calibri;" value="@Model.fmName" placeholder="إسم العائلة ...">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> حفظ</button>
                    <button type="reset" class="btn btn-sm btn-danger"><i class="fa fa-ban"></i> إفراغ</button>
                </div>
            </form>
        </div>
    </div>
</div>